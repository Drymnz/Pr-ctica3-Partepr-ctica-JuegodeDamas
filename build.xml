< ? xml version “1.0” encoding = “UTF8” ? > // versión y formato de código
<project name=“Nombre” default =“compile” basedir = “.” > // el nombre del archivo, y compilar
<target name=”compile” description=”Compila el código java”>// comunicarte con compile
<mkdir dir=”build”/>// dónde está .class
<javac srcdir=”src” destdir=”build” source=”1.8” targe=”1.8” includeantruntime=”false”/>// los .java y .class version java, false que no incluya librerías de ant
</target> // terminamos de decir cómo lo va a compilar 
<target name=”run” depends=”compile” description=”Ejecuta el programa> // ejecuta lo copilado 
<java fork=”true” classname=”Nombre”>// fork que ejecuta en JVM OJO NOMBRE.JAR
<classpath> // donde está ubicado todo bytecode
<path location=“build”/>
</classpath>
</java>
</target>
<target name=”clean” description=”borrar .class”> // supiera todo lo que realizo con .class
</target>
</project>

